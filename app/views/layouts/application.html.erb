<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
	<link type="text/css" rel="stylesheet" media="screen"
	 href="/stylesheets/font/stylesheet.css">
</head>
<body>
	<div class="container">
		<% flash.each do |key, value| %>
			<div class="flash">
				<div class="flashtop">&nbsp;</div>
				<div class="flashbot <%= key %>">
					<%= value %>
				</div>
			</div>
		<% end %>
		
		<div class="main">
			<%= yield %>
		</div>
		<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
