  gem 'rspec-rails', '>= 2.1.0'
  gem 'annotate-models'
  gem 'faker'
end

group :test do
  gem 'rspec'
  gem 'webrat'
  gem 'spork', '~> 0.9.0.rc' #, :git => "git://github.com/chrismdp/spork.git"
  gem 'factory_girl_rails'
end



